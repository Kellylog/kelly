<!DOCTYPE html>
<html>
<head>
  <title>Kelly</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>


<body>

<div id="wrap">
  <nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Kelly', root_path, class: 'navbar-brand' %>
    </div>




    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">          
      <ul class="nav navbar-nav navbar-right">  

        





        <% if user_signed_in? %>
        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
      <% else %>

      <!-- Log in modal -->
      <li><%= link_to 'Log in', 'new_user_session_path', data: {toggle: 'modal', target: '#myloginModal'} %></li>

      <!-- Sign up modal -->
      <li><%= link_to 'Sign up', 'new_user_registration_path', data: {toggle: 'modal', target: '#mysignupModal'} %></li>
        
      <% end %>               
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- Log in Modal -->
  <div class="modal fade" id="myloginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myloginModalLabel">Log in</h4>
        </div>
        <div class="modal-body">


          <!-- Log in form -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <br />
    <%= f.input :password, required: false %>
    <br />
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <br />

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<br />

<%= render "devise/shared/links" %>




        </div>
        <div class="modal-footer">          
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>


  <!-- Sign up Modal -->
  <div class="modal fade" id="mysignupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="mysignupModalLabel">Sign up</h4>
        </div>
        <div class="modal-body">

          <!-- Sign up form -->
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <br />
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <br />
    <%= f.input :password_confirmation, required: true %>
  </div>

  <br />

  <div class="form-actions">
    
    <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<br />

<%= render "devise/shared/links" %>





        </div>
        <div class="modal-footer">          
          <button type="button" class="btn btn-primary">Save changes</button>

        </div>
      </div>
    </div>
  </div>













<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
</div>

<br class="clr" />

<!-- footer -->
<div id="footer">
    <div class="container">
      <b>Footer Here</b>
      <br />
      <%= link_to 'Link', '#' %>
    </div>
  </div>

</body>
</html>
